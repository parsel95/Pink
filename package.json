{
  "name": "Cat-Energy",
  "private": true,
  "description": "Личный проект «Cat-Energy» от HTML Academy",
  "devDependencies": {
    "@htmlacademy/editorconfig-cli": ">1.0.0",
    "@linthtml/linthtml": "^0.9.5",
    "autoprefixer": "^10.4.0",
    "browser-sync": "^2.27.7",
    "del": "^7.1.0",
    "gulp": ">3.9.1",
    "gulp-dart-sass": "^1.0.2",
    "gulp-htmlmin": "^5.0.1",
    "gulp-imagemin": "^8.0.0",
    "gulp-inject": "^5.0.5",
    "gulp-plumber": "1.2.1",
    "gulp-postcss": "9.0.1",
    "gulp-rename": "^2.0.0",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-svgstore": "^9.0.0",
    "gulp-terser": "^2.1.0",
    "gulp-webp": ">4.0.0",
    "linthtml-config-htmlacademy": "^1.0.12",
    "postcss": "^8.3.11",
    "postcss-csso": "^6.0.1",
    "stylelint": "^15.10.0",
    "stylelint-config-htmlacademy": "^2.0.4"
  },
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint \"source/sass/**/*.scss\" --syntax scss",
    "test": "npm run editorconfig && npm run stylelint",
    "build": "gulp build",
    "start": "gulp"
